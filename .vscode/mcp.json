{
  "servers": {
    "imas": {
      "url": "https://imas-dd.iter.org/mcp",
      "type": "http"
    },
    // note: first initialization of imas-debug will take ~10 minutes to build the DD embeddings
    "imas-debug": {
      "type": "stdio",
      "command": "uv",
      "args": [
        "run",
        "--active",
        "imas-mcp",
        "--no-rich",
        "--log-level",
        "INFO",
      ]
    },
  },
}
