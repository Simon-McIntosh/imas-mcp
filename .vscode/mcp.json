{
  "servers": {
    // "my-mcp-server-7a681df0": {
    //   "type": "stdio",
    //   "command": "uv",
    //   "args": ["run", "python", "-m", "imas_mcp.server"]
    // },
    "imas-mcp-docker": {
      "type": "http",
      "url": "http://localhost:8000/mcp/"
    },
    "imas-docker-stdio": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "ghcr.io/simon-mcintosh/imas-mcp:latest-stdio"
      ]
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer ${input:github_mcp_pat}"
      }
    }
  },
  "inputs": [
    {
      "type": "promptString",
      "id": "github_mcp_pat",
      "description": "GitHub Personal Access Token",
      "password": true
    }
  ]
}
